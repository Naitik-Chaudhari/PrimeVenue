@model IEnumerable<PrimeVenue.Model.SubCategory>
@{
    ViewBag.Title = "Select SubCategory";
    var categoryId = ViewBag.CategoryId;
}

<h2>Select a SubCategory</h2>

<ul>
    @foreach (var sub in Model)
    {
        <li>
            @sub.Name
            <!-- "Request for Event" button -->
            <a asp-controller="EventRequest" asp-action="Create" asp-route-subCategoryId="@sub.Id">
                Request for Event
            </a>
        </li>
    }
</ul>

<!-- Optional Back Button to Categories -->
<a asp-controller="Category" asp-action="Index">Back to Categories</a>
