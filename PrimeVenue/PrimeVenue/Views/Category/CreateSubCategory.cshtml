@model PrimeVenue.Model.SubCategory

<h2>Create SubCategory</h2>

<form asp-action="CreateSubCategory" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Hidden field for CategoryId -->
    <input type="hidden" asp-for="CategoryId" />

    <!-- SubCategory Name -->
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Image URL -->
    <div>
        <label asp-for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" id="imageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Image Preview -->
    <div style="margin-top:10px;">
        <img id="previewImage" src="" width="150" style="display:none;" />
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top:10px;">Create SubCategory</button>
</form>

@section Scripts {
    <script>
        document.getElementById("imageUrl").addEventListener("input", function () {
            let img = document.getElementById("previewImage");
            img.src = this.value;
            img.style.display = this.value ? "block" : "none";
        });
    </script>
}
