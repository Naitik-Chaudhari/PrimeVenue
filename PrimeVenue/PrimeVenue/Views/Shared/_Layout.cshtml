@using Microsoft.AspNetCore.Identity
@using PrimeVenue.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeVenue</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="shadow-sm bg-light">
        <div class="container d-flex align-items-center justify-content-between py-3">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                <img src="https://www.maverickmanagement.in/wp-content/uploads/2017/09/Logo1.png" alt="PrimeVenue" style="height:60px;" />
            </a>

            <nav class="d-none d-md-block">
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Services</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="About">Event Gallery</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                    }

                </ul>
            </nav>

            <div class="d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="me-3">Hello, <strong>@User.Identity?.Name</strong></span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-dark btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light pt-5">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-md-3 mb-3">
                    <img src="https://www.maverickmanagement.in/wp-content/uploads/2017/09/Logo1-100x100.png" alt="Logo" class="mb-3" />
                </div>

                <!-- Address -->
                <div class="col-md-4 mb-3">
                    <h5>Address</h5>
                    <p class="mb-1">19, Ashwmegh Bungalows Part 2,<br />Near D’Mart, 132 Ft. Ring Road,<br />Satellite, Ahmedabad 380015</p>
                    <p><a href="mailto:info@primevenue.com" class="text-light text-decoration-none">info@primevenue.com</a></p>
                    <p><a href="tel:+91-9824996648" class="text-light text-decoration-none">+91-9824996648</a></p>
                </div>

                <!-- Links -->
                <div class="col-md-3 mb-3">
                    <h5>Company</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Services</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Events Gallery</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Subscribe -->
                <div class="col-md-2 mb-3">
                    <h5>Subscribe</h5>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Email" required />
                            <button class="btn btn-primary" type="submit">Go</button>
                        </div>
                    </form>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-light"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="text-center py-3 border-top mt-4">
                <small>&copy; @DateTime.Now.Year - PrimeVenue | Designed & Developed by You</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
