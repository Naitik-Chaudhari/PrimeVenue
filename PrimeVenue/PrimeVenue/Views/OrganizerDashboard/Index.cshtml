@model OrganizerDashboardViewModel

@{
    ViewData["Title"] = "Organizer - Dashboard";
}

<h2>Pending Event Requests</h2>
@if (Model.PendingRequests.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Event Date</th>
                <th>Time</th>
                <th>Budget</th>
                <th>Services</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.PendingRequests)
            {
                <tr>
                    <td>@r.CustomerId</td>
                    <td>@r.EventDate.ToShortDateString()</td>
                    <td>@r.EventTime</td>
                    <td>@r.Budget</td>
                    <td>@r.RequestedServices</td>
                    <td>
                        <a asp-action="ViewTemplates" asp-route-eventRequestId="@r.Id" class="btn btn-primary btn-sm">
                            View Templates
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending requests.</p>
}

