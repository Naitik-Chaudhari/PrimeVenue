@{
    ViewData["Title"] = "Create Event Template";
}

<h2>Create Template</h2>

<form asp-action="CreateTemplate" method="post">
    <input type="hidden" name="eventRequestId" value="@ViewBag.RequestId" />
    <div class="form-group">
        <label>Estimated Budget</label>
        <input type="number" step="0.01" name="estimatedBudget" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Save Template</button>
</form>
