@model List<PrimeVenue.Model.VendorService>

@{
    ViewBag.Title = "Add Vendors to Template";
    var template = ViewBag.Template as PrimeVenue.Model.EventTemplate;
}

<h2>Add Vendors to Template</h2>

<div>
    <p><strong>Event Request ID:</strong> @template.EventRequestId</p>
    <p><strong>Estimated Budget:</strong> @template.EstimatedBudget.ToString("C")</p>
</div>

<form asp-action="AddVendorsToTemplate" method="post">
    <input type="hidden" name="templateId" value="@template.Id" />

    @if (!Model.Any())
    {
        <p class="text-warning">No vendor services are available.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Vendor Name</th>
                    <th>Service Type</th>
                    <th>Price Estimate</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vendor in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedVendorIds" value="@vendor.Id" />
                        </td>
                        <td>@vendor.Vendor?.FullName</td>
                        <td>@vendor.ServiceType</td>
                        <td>@vendor.PriceEstimate.ToString("C")</td>
                        <td>
                            @{
                                double ratingValue = vendor.Rating ?? 0.0; // ✅ handle null
                                int roundedRating = (int)Math.Round(ratingValue);
                            }

                            @for (int i = 0; i < roundedRating; i++)
                            {
                                <span style="color: gold;">★</span>
                            }
                            @for (int i = roundedRating; i < 5; i++)
                            {
                                <span style="color: #ccc;">★</span>
                            }

                            <small>(@ratingValue.ToString("0.0"))</small>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }

    <button type="submit" class="btn btn-primary">Attach Selected Vendors</button>
    <a asp-action="PendingRequests" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
