@model IEnumerable<PrimeVenue.Model.EventTemplate>

@{
    ViewData["Title"] = "Templates for Event Request";
    var eventRequestId = ViewBag.EventRequestId;
}

<h2>Templates</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Estimated Budget</th>
                <th>Status</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.EstimatedBudget</td>
                    <td>@t.Status</td>
                    <td>
                        <a asp-action="ReviewTemplate" asp-route-templateId="@t.Id"
                           class="btn btn-primary btn-sm">
                            Review
                        </a>
                        <form asp-action="RemoveTemplate" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this template?');">
                            <input type="hidden" name="templateId" value="@t.Id" />
                            <input type="hidden" name="eventRequestId" value="@eventRequestId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                 Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No templates created yet for this request.</p>
}

<!-- Add Vendors Button at Bottom -->
<div class="mt-3">
    <a asp-action="CreateTemplate" asp-route-id="@eventRequestId" class="btn btn-success">
        ➕ Create New Template & Add Vendors
    </a>
</div>

@if (Model.Any())
{
    <form asp-action="SendTemplatesToUser" method="post" class="mt-3">
        <input type="hidden" name="eventRequestId" value="@eventRequestId" />
        <button type="submit" class="btn btn-warning">
            📤 Send Templates to Customer
        </button>
    </form>
}
