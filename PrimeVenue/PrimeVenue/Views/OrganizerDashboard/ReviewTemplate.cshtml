@model PrimeVenue.Model.EventTemplate

@{
    ViewBag.Title = "Review Event Template";
}

<h2>Review Event Template</h2>

<div class="card p-3 mb-3">
    <h4>Template Details</h4>
    <p><strong>Event Request ID:</strong> @Model.EventRequestId</p>
    <p><strong>Organizer:</strong> @Model.Organizer?.UserName</p>
    <p><strong>Estimated Budget:</strong> @Model.EstimatedBudget.ToString("C")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<div class="card p-3">
    <h4>Selected Vendors</h4>

    @if (Model.TemplateVendors == null || !Model.TemplateVendors.Any())
    {
        <p class="text-warning">No vendors selected for this template.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Service Type</th>
                    <th>Price Estimate</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tv in Model.TemplateVendors)
                {
                    <tr>
                        <td>@tv.VendorService?.Vendor?.UserName</td>
                        <td>@tv.VendorService?.ServiceType</td>
                        <td>@tv.VendorService?.PriceEstimate.ToString("C")</td>
                        <td>
                            @for (int i = 0; i < (int)Math.Round(tv.VendorService?.Rating ?? 0); i++)
                            {
                                <span style="color: gold;">★</span>
                            }
                            @for (int i = (int)Math.Round(tv.VendorService?.Rating ?? 0); i < 5; i++)
                            {
                                <span style="color: #ccc;">★</span>
                            }
                            <small>(@(tv.VendorService?.Rating?.ToString("0.0") ?? "0.0"))</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="mt-3">
    <form asp-action="ConfirmTemplate" method="post">
        <input type="hidden" name="templateId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Confirm & Send to Customer</button>
    </form>

    <a asp-action="AddVendorsToTemplate" asp-route-templateId="@Model.Id" class="btn btn-warning mt-2">
        Edit Vendors
    </a>

    <a asp-action="PendingRequests" class="btn btn-secondary mt-2">Back to Dashboard</a>
</div>
